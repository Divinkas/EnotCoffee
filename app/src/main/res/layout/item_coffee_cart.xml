<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemCoffeeContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:focusable="true"
    android:clickable="true"
    android:layout_margin="5dp"
    android:background="@drawable/selector_recyclerview_foreground"
    android:padding="15dp">

    <TextView
        android:id="@+id/tvItemCoffeeName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/notification"
        android:textSize="22sp"
        android:textAlignment="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvItemCoffeePrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/notification"
            android:layout_weight="1"
            android:textSize="14sp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/tvItemCoffeeVolume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/notification"
            android:layout_weight="1"
            android:textSize="14sp"
            android:textAlignment="center"/>

        </LinearLayout>

    <TextView
        android:id="@+id/tvItemCoffeeCountSellForCurrentDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/counter_bg"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="@string/zero"
        android:gravity="end"
        android:layout_gravity="end"/>

</LinearLayout>